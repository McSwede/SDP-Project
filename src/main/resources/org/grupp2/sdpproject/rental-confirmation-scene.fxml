<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.grupp2.sdpproject.GUI.customer.RentalConfirmationScene"
      alignment="CENTER" spacing="20"
      style="-fx-background-color: #f8f9fa; -fx-padding: 30;"
      prefWidth="400" prefHeight="500">


    <Label text="Hyr bekräftelse" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2a5885;"/>

    <!-- Details Box -->
    <VBox alignment="CENTER_LEFT" spacing="12" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <Text fx:id="thankYouMessage" style="-fx-font-size: 16px; -fx-fill: #4a4a4a; -fx-font-weight: bold;"/>


        <GridPane hgap="15" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                <ColumnConstraints halignment="LEFT" minWidth="200"/>
            </columnConstraints>

            <children>
                <Label text="Film:" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <Text fx:id="filmTitleText" GridPane.columnIndex="1" style="-fx-font-size: 15px; -fx-fill: #333;"/>

                <Label text="Uthyrningsdatum:" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <Text fx:id="rentalDateText" GridPane.columnIndex="1" style="-fx-font-size: 15px; -fx-fill: #333;"/>

                <Label text="Returdatum:" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <Text fx:id="returnDateText" GridPane.columnIndex="1" style="-fx-font-size: 15px; -fx-fill: #333;"/>

                <Label text="Totalt pris:" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <Text fx:id="rentalPriceText" GridPane.columnIndex="1" style="-fx-font-size: 15px; -fx-fill: #2a5885; -fx-font-weight: bold;"/>
            </children>
        </GridPane>
    </VBox>

    <!-- Footer Message -->
    <Label text="Tack för att du hyr hos oss!" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>


</VBox>