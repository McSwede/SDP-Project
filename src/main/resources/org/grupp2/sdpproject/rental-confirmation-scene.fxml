<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="424.0" prefWidth="600.0" spacing="20" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.grupp2.sdpproject.GUI.customer.RentalConfirmationScene">


    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2a5885;" text="Hyr bekräftelse" />

    <!-- Details Box -->
    <VBox alignment="CENTER_LEFT" spacing="12" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <Text fx:id="thankYouMessage" style="-fx-font-size: 16px; -fx-fill: #4a4a4a; -fx-font-weight: bold;" />


        <GridPane hgap="15" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100" />
                <ColumnConstraints halignment="LEFT" minWidth="200" />
            </columnConstraints>

            <children>
                <Label style="-fx-font-weight: bold; -fx-text-fill: #555;" text="Film:" />
                <Text fx:id="filmTitleText" style="-fx-font-size: 15px; -fx-fill: #333;" GridPane.columnIndex="1" />

                <Label style="-fx-font-weight: bold; -fx-text-fill: #555;" text="Uthyrningsdatum:" />
                <Text fx:id="rentalDateText" style="-fx-font-size: 15px; -fx-fill: #333;" GridPane.columnIndex="1" />

                <Label style="-fx-font-weight: bold; -fx-text-fill: #555;" text="Returdatum:" />
                <Text fx:id="returnDateText" style="-fx-font-size: 15px; -fx-fill: #333;" GridPane.columnIndex="1" />

                <Label style="-fx-font-weight: bold; -fx-text-fill: #555;" text="Totalt pris:" />
                <Text fx:id="rentalPriceText" style="-fx-font-size: 15px; -fx-fill: #2a5885; -fx-font-weight: bold;" GridPane.columnIndex="1" />
            </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </VBox>

    <!-- Footer Message -->
    <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Tack för att du hyr hos oss!" />
   <padding>
      <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
   </padding>


</VBox>
