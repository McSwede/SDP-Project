<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.grupp2.sdpproject.GUI.customer.FilmDetailScene"
            prefWidth="700.0" prefHeight="600.0" fx:id="root">
    <children>
        <VBox spacing="10.0" alignment="TOP_LEFT" >
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <children>
                <Label text="Film Details" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" />
                        <ColumnConstraints prefWidth="500.0"/>
                    </columnConstraints>
                    <children>
                        <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="titleLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextArea fx:id="descriptionArea" GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false" wrapText="true" prefRowCount="3"/>

                        <Label text="Release Year:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="releaseYearLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Language:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="languageLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Original Language:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Label fx:id="originalLanguageLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Rental Duration:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <Label fx:id="rentalDurationLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                        <Label text="Rental Rate:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <Label fx:id="rentalRateLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                        <Label text="Length:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                        <Label fx:id="lengthLabel" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                        <Label text="Replacement Cost:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                        <Label fx:id="replacementCostLabel" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                        <Label text="Rating:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                        <Label fx:id="ratingLabel" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

                        <Label text="Special Features:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                        <Label fx:id="specialFeaturesLabel" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

                        <Label text="Actors:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
                        <TextArea fx:id="actorsArea" GridPane.rowIndex="11" GridPane.columnIndex="1" editable="false" wrapText="true" prefRowCount="3"/>

                        <Label text="Categories:" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
                        <TextArea fx:id="categoriesArea" GridPane.rowIndex="12" GridPane.columnIndex="1" editable="false" wrapText="true" prefRowCount="2"/>
                    </children>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="backButton" text="Back" onAction="#handleBack" />
                    <Button fx:id="rentButton" text="Rent Movie" onAction="#handleRent"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>