<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="root" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.grupp2.sdpproject.GUI.customer.FilmsScene">
    <children>
        <VBox spacing="10.0" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <children>
                <Label text="All Films" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <TextField fx:id="searchField" promptText="Search by title..." maxWidth="300"/>
                <TableView fx:id="filmTable" prefHeight="400.0">
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Title" prefWidth="200.0"/>
                        <TableColumn fx:id="releaseYearColumn" text="Release Year" prefWidth="100.0"/>
                        <TableColumn fx:id="rentalRateColumn" text="Rental Rate" prefWidth="100.0"/>
                        <TableColumn fx:id="ratingColumn" text="Rating" prefWidth="100.0"/>
                        <TableColumn fx:id="actionColumn" text="Action" prefWidth="100.0"/>
                    </columns>
                </TableView>
                <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
